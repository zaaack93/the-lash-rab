<div class="container{% unless section.settings.full_width %} container--reading-width{% endunless %}" data-cc-animate>
  <div class="page-header">
    <h1 class="majortitle">{{ page.title }}</h1>
  </div>
  <div class="rte cf">
    {{ page.content }}
  </div>
</div>


{% schema %}
  {
    "name": "Page",
    "class": "page-section-spacing",
    "settings": [
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Full width",
        "default": false
      }
    ]
  }
{% endschema %}

